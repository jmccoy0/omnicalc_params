<h1>
  Payment Calculation
</h1>
<form action="/payment/results">
  <div>
    <label for="input_apr">
      APR
    </label>
    <input id="input_apr" type="text" name="user_int" placeholder="E.g. 5.42">
  </div>
  <div>
    <label for="input_yrs">
      Number of years
    </label>
    <input id="input_yrs" type="text" name="user_yrs" placeholder="How many years to repay?">
  </div>
  <div>
    <label for="input_prin">
      Principal
    </label>
    <input id="input_prin" type="text" name="user_prin" placeholder="How much principal?">
  </div>
  <button>Calculate monthly payment</button>
</form>
